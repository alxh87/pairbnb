<div class="card">
    <div class="row">
			<div class="col-md-12">
				<div id="cardCarousel<%=listing.id%>" class="carousel slide" data-ride="carousel">

				  <!-- Wrapper for slides -->
					 <% if listing.avatars.present? %>
					  <div class="carousel-inner" role="listbox">
							<div class="item active">
							  <%= image_tag (listing.avatars.first.square.url) %>
						      <div class="carousel-caption">
						        <h3>Sofia</h3>
						        <p>Pretty foggy</p>
						      </div>
							</div>
							
					    <% listing.avatars.each do |i| %>
						    <div class="item">
						      <%= image_tag (i.square.url) %>
						      <div class="carousel-caption">
						        <h3>Sofia</h3>
						        <p>Pretty foggy</p>
						      </div>
						    </div>
					   	<% end %>
					  </div>
					<% end %>
				  <!-- Left and right controls -->
				  <a class="left carousel-control" href="#cardCarousel<%=listing.id%>" role="button" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#cardCarousel<%=listing.id%>" role="button" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>

				<div class="main-text cardprice">
				    <div class="col-md-2 text-left">$<%= listing.price_per_night %>
				    </div>
				</div>
			</div>

    </div>

    <div class="cardlabel">
    	<h4><%= listing.title %></h4>
    </div>
</div>